# frozen_string_literal: true

require_relative "../../base_challenge"

module Bauk
  module AdventOfCode
    module Year${YEAR}
      module Challenge${CHALLENGE}
        Opts = Struct.new(:map_file)
                     .new("map.txt")

        # Options for ${YEAR}/${CHALLENGE}
        module Options
          def self.parse(opts)
            opts.on("--map-file=FILE") do |file|
              Opts.map_file = file
            end
          end
        end
      end
    end
  end
end
